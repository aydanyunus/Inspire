    <!-- ISOTOP-POSTS SECTION STARTS HERE -->
    <section id="isotop-posts">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="col-md-9 col-xs-12 isotop">
                    <div class="row">
                        <!-- isotop filters and view -->
                        <div class="col-md-9 col-xs-12 isotop-filters">
                            <ul>
                                <li>
                                    <a href="#" class="active" data-filter="*">
                                        ALL
                                    </a>
                                </li>
                                <li>
                                    <a href="#" data-filter=".@Model.posts[0].PostCategory1.Name">
                                        HAIR
                                    </a>
                                </li>
                                <li>
                                    <a href="#" data-filter=".@Model.posts[1].PostCategory1.Name">
                                        MAKEUP
                                    </a>
                                </li>
                                <li>
                                    <a href="#" data-filter=".@Model.posts[2].PostCategory1.Name">
                                        NAILS
                                    </a>
                                </li>
                                <li>
                                    <a href="#" data-filter=".@Model.posts[3].PostCategory1.Name">
                                        FASHION
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3 col-xs-12 view">
                            <p>
                                View:
                                <span>
                                    <a href=@Url.Action("Index", "BeautyList") class="active">
                                        <i class="fa fa-list" aria-hidden="true"></i>
                                    </a>
                                </span>
                                <span>
                                    <a href=@Url.Action("Index", "Beauty")>
                                        <i class="fa fa-th" aria-hidden="true"></i>
                                    </a>
                                </span>
                            </p>
                        </div>
                    </div>
                    <!-- grid starts here-->
                    <div class="row beauty-list-posts grid">
                        @foreach (var item in Model.posts)
                        {
                            for (int i = 0; i < 1; i++)
                            {
                                var classname = "";
                                if (i % 2 == 0)
                                {
                                    classname = " without-padding";
                                }
                                else
                                {
                                    classname = " without-padding-2";
                                }
                                <div class="col-md-12 col-xs-12 @classname grid-item @item.PostCategory1.Name">
                                    @for (int j = 0; j < 1; j++)
                                    {
                                        var className1 = "";
                                        var className2 = "";

                                        if (j % 2 == 0)
                                        {
                                            className1 = " beauty-img-part";
                                            className2 = " content-with-border";
                                        }
                                        else
                                        {
                                            className1 = " beauty-img-part-2";
                                            className2 = " content-with-border-2";
                                        }
                                        <div class="col-md-6 col-xs-12 @className1">
                                            <a href=@Url.Action("Index", "SinglePost")>
                                                <img src="~/Uploads/@item.PostImgMedium.Img" alt="">
                                            </a>
                                        </div>
                                        <div class="col-md-6 col-xs-12 @className2">
                                            <div class="beauty-text-panel">
                                                <a href="#">
                                                    @item.PostCategory.Name
                                                </a>

                                                @if (item.PostCategory.Name != item.PostCategory1.Name)
                                                {
                                                    <span>,</span>
                                                    <a href="#">
                                                        @item.PostCategory1.Name
                                                    </a>
                                                }

                                            </div>
                                            <a href="single-post.html" class="big-a-content">
                                                @item.Title
                                            </a>
                                            <div class="icon-date">
                                                <p>
                                                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                                                    <span>@item.Written_date</span>
                                                </p>
                                                <p class="margin-left">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                    <span>@item.View_Count</span>
                                                </p>
                                            </div>
                                            <p class="bottom-content">
                                                @item.Content
                                            </p>
                                        </div>
                                    }

                                </div>
                            }
                        }

                    </div>
                    <!-- grid ends here-->
                    <div class="row btn-part-more">
                        <div class="col-md-12 col-xs-12 col-md-offset-5">
                            <a href="#" class="btn btn-default">
                                MORE
                            </a>
                        </div>
                    </div>
                </div>
                <!-- sidebar starts here -->
                <div class="col-md-3 col-xs-12 sidebar">
                    <div class="row bordered-sidebar">
                        <div class="col-md-12 col-xs-12">
                            <p class="free-offer">FREE OFFER</p>
                            <h4>@Model.freeOffer.Title</h4>
                            <h5>@Model.freeOffer.SupTitle!</h5>
                            <form action="" method="POST">
                                <div class="col-md-12 col-xs-12 form-group">
                                    <input type="email" class="form-control" placeholder="Email">
                                    <button type="submit" class="btn-lg gray-btn">SUBSCRIBE</button>
                                </div>
                            </form>
                            <h5>@Model.freeOffer.SubTitle</h5>
                        </div>
                    </div>
                    <div class="row popular-posts-p">
                        <p>POPULAR POSTS</p>
                    </div>
                    @foreach (var item in Model.sidebar)
                    {
                        <div class="row popular-posts">
                            <div class="col-md-12 col-xs-12">
                                <a href=@Url.Action("Index", "SinglePost")>
                                    <img src="~/Uploads/@item.Img" alt="">
                                </a>
                                <a href="single-post.html" class="text-color">
                                    @item.Title
                                </a>
                                <div class="icon-date">
                                    <p>
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        <span>
                                            @item.Written_date
                                        </span>
                                    </p>
                                    <p class="margin-left text-right">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                        <span>@item.View_Count</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row banner-img">
                        <img src="~/Uploads/@Model.banner.Img" alt="">
                    </div>
                    <div class="row instagram-feed">
                        <p>INSTAGRAM FEED</p>
                    </div>
                    <div class="row instagram-pics-part1">
                        @foreach (var item in Model.minipics)
                        {
                            <div class="col-md-4 col-xs-4 min-pics">
                                <a href="https://scontent.cdninstagram.com/vp/573dc0a812923c0088d65d0939a08156/5B593EB1/t51.2885-15/s640x640/sh0.08/e35/18581146_1770433496602061_179455278498971648_n.jpg">
                                    <img src="~/Uploads/@item.Img" alt="">
                                </a>
                                <div class="caption">
                                    <ul class="list-inline">
                                        <li>
                                            <i class="fa fa-thumbs-o-up" aria-hidden="true">@item.Like_count</i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- sidebar ends here -->
            </div>
        </div>
    </section>
