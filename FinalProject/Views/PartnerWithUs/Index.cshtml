@using FinalProject.ViewModels.HomeViewModel;
@model HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN SECTION STARTS HERE -->
<section id="main">
    <div class="row">
        <div class="col-md-12 col-xs-12 partnerus-main-image text-center" style="background: url(../../Uploads/@Model.partnerWithUsBg.Img); background-size: cover; background-position: center 50%;">
            <h1>
                Partner with Us
            </h1>
            <a href=@Url.Action("Index", "Home")>
                Home
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <a href=@Url.Action("Index", "Home")>
                Additional Pages
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span>
                Partner with Us
            </span>
        </div>
    </div>
</section>
<!-- MAIN SECTION ENDS HERE -->
<!-- PARTNER WITH US SECTION STARTS HERE -->
<section id="partner-with-us">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-xs-12 cooperation">
                <div class="row bordered-row">
                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-6 col-xs-12 beneficial">
                            <h3>Beneficial cooperation</h3>
                            <p>
                                @Model.cooperation.Content1
                            </p>
                            <p>
                                @Model.cooperation.Content2
                            </p>
                        </div>
                        <div class="col-md-6 col-xs-12 green-large-icons">
                            @foreach (var item in Model.greeniconsection)
                            {
                            <div class="col-md-12 col-xs-12 icon-section-div">
                                <div class="col-md-2 col-xs-12 green-icon text-center">
                                    <i class="@item.Icon" aria-hidden="true"></i>
                                </div>
                                <div class="col-md-10 col-xs-12 content">
                                    <h5>@item.Title</h5>
                                    <p>@item.Content</p>
                                </div>
                            </div>

                            }
                        </div>
                    </div>
                </div>
                <div class="row counter-section">
                    <div class="col-md-12 col-xs-12 text-center">
                        <div class="col-md-3 col-xs-12 counter-box myCounter1">
                            <span class="counter-span1">11756</span>
                            <p>VISITORS PER DAY</p>
                        </div>
                        <div class="col-md-3 col-xs-12 counter-box myCounter2">
                            <span class="counter-span2">
                                100%
                            </span>
                            <p>QUALITY TRAFFIC</p>
                        </div>
                        <div class="col-md-3 col-xs-12 counter-box myCounter3">
                            <span class="counter-span3">35428</span>
                            <p>VISITS PER MONTH</p>
                        </div>
                    </div>
                </div>
                <div class="row brands">
                    <div class="col-md-12 col-xs-12 brand-bg-img" style="background: url(../../Uploads/@Model.ourPartner.Background_img); background-size: cover;">
                        <h3>Our Partners</h3>
                        <p>
                            @Model.ourPartner.Content
                        </p>
                        <div class="brand-logos">
                            @foreach (var item in Model.brandimgs)
                            {
                            <div class="col-md-3 col-xs-12">
                                <a href="#">
                                    <img src="~/Uploads/@item.Img" alt="">
                                </a>
                            </div>

                            }
                        </div>
                    </div>
                </div>
                <div class="row example-posts">
                    <p class="border-bottom">EXAMPLES OF ADVERTISING POSTS</p>
                    <div class="row beauty-list-posts grid">
                        @for (int i = 0; i < 1; i++)
                        {
                            <div class="col-md-12 col-xs-12 without-padding grid-item makeup">
                                <div class="col-md-6 col-xs-12 beauty-img-part">
                                    <a href=@Url.Action("Index", "SinglePost")>
                                        <img src="~/Uploads/@ViewBag.Mustread[0].HomePageImg.Img" alt="">
                                    </a>
                                </div>
                                <div class="col-md-6 col-xs-12 content-with-border">
                                    <div class="beauty-text-panel">
                                        <a href="#">
                                            @ViewBag.Mustread[0].PostCategory.Name
                                        </a>
                                        <span>,</span>
                                        <a href="#">
                                            @ViewBag.Mustread[0].PostCategory1.Name
                                        </a>
                                    </div>
                                    <a href=@Url.Action("Index", "SinglePost") class="big-a-content">
                                        @ViewBag.Mustread[0].Title
                                    </a>
                                    <div class="icon-date">
                                        <p>
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                                            <span>@ViewBag.Mustread[0].Written_date</span>
                                        </p>
                                        <p class="margin-left">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                            <span>@ViewBag.Mustread[0].View_Count</span>
                                        </p>
                                    </div>
                                    <p class="bottom-content">
                                        @ViewBag.Mustread[0].Content
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12 without-padding-2 grid-item hair">
                                <div class="col-md-6 col-xs-12 content-with-border-2">
                                    <div class="beauty-text-panel">
                                        <a href="#">
                                            @ViewBag.Mustread[1].PostCategory.Name
                                        </a>
                                        <span>,</span>
                                        <a href="#">
                                            @ViewBag.Mustread[1].PostCategory1.Name
                                        </a>
                                    </div>
                                    <a href=@Url.Action("Index", "SinglePost") class="big-a-content">
                                        @ViewBag.Mustread[1].Title
                                    </a>
                                    <div class="icon-date">
                                        <p>
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                                            <span>@ViewBag.Mustread[1].Written_date</span>
                                        </p>
                                        <p class="margin-left">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                            <span>@ViewBag.Mustread[1].View_Count</span>
                                        </p>
                                    </div>
                                    <p class="bottom-content">
                                        @ViewBag.Mustread[1].Content
                                    </p>
                                </div>
                                <div class="col-md-6 col-xs-12 beauty-img-part-2">
                                    <a href=@Url.Action("Index", "SinglePost")>
                                        <img src="~/Uploads/@ViewBag.Mustread[1].HomePageImg.Img" alt="">
                                    </a>
                                </div>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
            <!-- SIDEBAR SECTION STARTS HERE -->
            <div class="col-md-3 col-xs-12 sidebar">
                <div class="row">
                    <div class="col-md-12 col-xs-12 wrapper-work-sidebar">
                        <div class="work-img" style="background-image: url(../../Uploads/@Model.lookingForWork.Img); background-size: cover; background-position: center center;">
                            <div class="work-text text-center">
                                <h3>Looking for work?</h3>
                                <div class="border-bottom-green"></div>
                                <p>@Model.lookingForWork.Content</p>
                                <div class="col-md-12 form-group">
                                    <form action="" class="form-" method="POST">
                                        <input type="email" class="form-control" placeholder="Email">
                                        <button class="btn btn-default form-control" type="submit">SUBSCRIBE</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row popular-posts-p">
                    <p>LATEST POSTS</p>
                </div>
                @foreach (var item in Model.sidebar)
                {
                     <div class="row popular-posts">
                    <div class="col-md-12 col-xs-12">
                        <a href=@Url.Action("Index", "SinglePost")>
                            <img src="~/Uploads/@item.Img" alt="">
                        </a>
                        <a href=@Url.Action("Index", "SinglePost") class="text-color">
                           @item.Title
                        </a>
                        <div class="icon-date">
                            <p>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span>
                                    @item.Written_date
                                </span>
                            </p>
                            <p class="margin-left text-right">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>@item.View_Count</span>
                            </p>
                        </div>
                    </div>
                </div>
                }
                <div class="row instagram-feed">
                    <p>INSTAGRAM FEED</p>
                </div>
                <div class="row instagram-pics-part1">
                    @foreach (var item in Model.minipics)
                    {
                    <div class="col-md-4 col-xs-4 min-pics">
                        <a href="#">
                            <img src="~/Uploads/@item.Img" alt="">
                        </a>
                        <div class="caption">
                            <ul class="list-inline">
                                <li>
                                    <i class="fa fa-thumbs-o-up" aria-hidden="true">@item.Like_count</i>
                                </li>
                            </ul>
                        </div>
                    </div>

                    }
                </div>
            </div>
            <!-- SIDEBAR SECTION ENDS HERE -->
        </div>
    </div>
</section>
<!-- PARTNER WITH US SECTION ENDS HERE -->