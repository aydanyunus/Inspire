@using FinalProject.ViewModels.HomeViewModel;
@model HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<!-- SWIPER SLIDE STARTS HERE -->
<section id="slider">
    <div class="swiper-container" data-simulate-touch="false">
        <div class="swiper-wrapper">
            @foreach (var item in Model.Slider)
            {
                  <div class="swiper-slide slide-2" style=" background: url(../../Uploads/@item.Background_img); background-size: cover;" data-swiper-slide-index="0">
                <div class="borders"></div>
                <div class="slide-content">
                    <p>
                        <a href="#">@item.SliderCategory.Name</a>
                        <span>, </span>
                        <a href="#">@item.SliderCategory1.Name</a>
                    </p>
                    <h2>
                        <a href="single-post.html">
                            @item.Title
                        </a>
                    </h2>
                    <div class="icon-date">
                        <p>
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                            <span>@item.Written_date</span>
                        </p>
                        <p>
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            <span>@item.View_Count</span>
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
    <div class="swiper-pagination"></div>
</section>
<!-- SWIPER SLIDE ENDS HERE -->
<!-- POST SECTION STARTS HERE -->
<section id="postssection">
    <div class="container posts">
        <div class="row">
            <!-- latest posts -->
            <div class="col-md-8 col-xs-12 latest-posts">
                <p class="with-border">LATEST POSTS</p>
                @foreach (var item in Model.posts.Where(p => p.Page_home_id != null).OrderBy(t => t.Id).Take(3).ToList())
                {
                <div class="row margin-top">
                    <div class="col-md-5 col-xs-12 left-side">
                        <a href="single-post.html">
                            <img src="~/Uploads/@item.HomePageImg.Img" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 col-xs-12 right-side">
                        <div class="main-a">
                            <a href="#">
                                @item.PostCategory.Name ,
                            </a>
                            <a href="#">
                                @item.PostCategory1.Name
                            </a>
                        </div>
                        <a href="single-post.html">
                            <h4>@item.Title</h4>
                        </a>
                        <div class="icon-date">
                            <p>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span>@item.Written_date</span>
                            </p>
                            <p class="margin-left">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>@item.View_Count</span>
                            </p>
                        </div>
                        <p class="simple-text">
                            @item.Content
                        </p>
                    </div>
                </div>
                }
            </div>
            <!-- popular posts -->

            <div class="col-md-4 col-xs-12 popular-posts">
                <p>POPULAR POSTS</p>
                <div class="row with-border">
                    @foreach (var item in Model.sidebar)
                    {
                         <div class="col-md-12 col-xs-12 wrapper">
                        <div class="col-md-12 col-xs-12 posts-sidebar">
                            <div class="posts-sidebar-left col-md-3 col-xs-3">
                                <a href="single-post.html">
                                    <img src="~/Uploads/@item.Img" alt="">
                                </a>
                            </div>
                            <div class="posts-sidebar-right col-md-9 col-xs-9">
                                <a href="single-post.html">
                                    @item.Title
                                </a>
                                <div class="icon-date">
                                    <p>
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        <span>@item.Written_date</span>
                                    </p>
                                    <p class="margin-left">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                        <span>
                                            @item.View_Count
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <div class="row">
                    <p class="trending">TRENDING</p>
                    <span class="brand">NEW</span>
                </div>
                <div class="banner-image-wrapper">
                    <div class="col-md-12 col-xs-12 banner-image" style="background: url(../../Uploads/@Model.trending.Img);background-size: cover;">
                        <div class="borders">
                        </div>
                        <div class="banner-text">
                            <a href="single-post.html">
                                @Model.trending.Title
                            </a>
                            <div class="icon-date">
                                <p>
                                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                                    <span>@Model.trending.Written_date</span>
                                </p>
                                <p class="margin-left">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    <span>
                                        @Model.trending.View_Count
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- POST SECTION ENDS HERE -->

<!-- VIDEO SECTION STARTS HERE -->
<section id="video-review">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12 border-bottom-text">
                <p>VIDEO REVIEW</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12 bg-video">
                <img src="~/Uploads/@Model.video.HomePageImg.Img" alt="">
                <div class="content-body">
                    <div class="border-100-percent col-md-offset-5 col-xs-offset-5">
                        <a href="https://player.vimeo.com/video/59474227?color=ff9933&title=0&byline=0&portrait=0">
                            <i class="fa fa-play fa-2x" aria-hidden="true"></i>
                        </a>
                    </div>
                    <h1>@Model.video.Title</h1>
                    <p>@Model.video.SubTitle</p>
                </div>
            </div>
        </div>

        
    </div>
</section>
<!-- VIDEO SECTION ENDS HERE -->

<!-- MUST READ SECTION STARTS HERE -->
