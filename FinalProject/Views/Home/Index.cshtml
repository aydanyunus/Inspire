                    </p>
                </div>
                <div class="col-md-6 col-xs-12 beauty-img-part-2">
                    <a href="single-post.html">
                        <img src="~/Uploads/home3-7-585x433.jpg" alt="">
                    </a>
                </div>
            </div>          
        </div>
    </div>
</section>
<!-- MUST READ SECTION ENDS HERE -->

<!-- PICS SECTION STARTS HERE -->
<section id="insta-pics">
    <div class="row">
        <div class="col-md-12 col-xs-12 followlink text-center">
            <a class="inspire-link" href="#">
                FOLLOW US
                <span>&commat;INSPIRE</span>
            </a>
        </div>
    </div>
    <!-- mini pics -->
    <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model.instagramPics)
            {
                <div class="col-md-3 col-xs-12 mini-pic">
                <div class="pic-wrapper">
                    <div class="borders">
                    </div>
                    <a href="https://scontent.cdninstagram.com/vp/573dc0a812923c0088d65d0939a08156/5B593EB1/t51.2885-15/s640x640/sh0.08/e35/18581146_1770433496602061_179455278498971648_n.jpg"
                       data-images-standard_resolution-url="href">
                        <img src="@item.Img" data-images-standard_resolution-url="src" alt="">
                    </a>
                    <div class="pic-content">
                        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                        <span>@item.Like_count</span>
                    </div>
                </div>
            </div>
            }     
        </div>
    </div>
</section>
<!-- PICS SECTION ENDS HERE -->
