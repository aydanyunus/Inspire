                        <p>
                            Inspire © <span>@Model.footer.Copywrite_date</span>.
                            <span>
                                <a href=@Url.Action("Index", "PrivacyPolicy")>Privacy Policy</a>
                            </span>
                        </p>
                    </div>
                    <div class="col-md-4 col-xs-12 social text-center">
