                    Cart Page
                </span>
            </div>
        </div>
    </section>
    <!-- MAIN SECTION ENDS HERE -->
    <!-- CART SECTION STARTS HERE -->
    <section id="cart">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <h4>2 Items in your cart</h4>
                    <div class="table col-md-12">
                        <table class="table-cart">
                            <tbody>
                                @foreach (var item in Model.product_to_categories)
                                {
                                    <tr>
                                        <td>
                                            <div class="counter col-md-12 col-xs-12">
                                                <input type="number" class="form-input" data-zeros="true" name="Count" id="count" value="1" min="1" max="1000">
                                                <span class="plus-minus up">+</span>
                                                <span class="plus-minus down">-</span>
                                            </div>
                                        </td>
                                        <td>
                                            <a href=@Url.Action("Details", "Shop")>
                                                <img class="image" src="~/Uploads/@item.Product.ProductImgMini.Img" alt="">
                                            </a>
                                        </td>
                                        <td>
                                            <p>
                                                @item.ProductCategory.Name
                                            </p>
                                            <h5>
                                                <a href=@Url.Action("Details", "Shop")>
                                                    @item.Product.Name
                                                </a>
                                            </h5>
                                        </td>
                                        <td>
                                            <span class="price">$@item.Product.Price</span>
                                        </td>
                                        <td>
                                            <a href="#" class="close">
                                                <i class="fa fa-times" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12 col-xs-12 total-price text-right">
                        <h5>
                            Total:
                            <span>$88</span>
                        </h5>
                    </div>
                    <div class="col-md-12 col-xs-12 checkout">
                        <button class="btn btn-default btn-lg col-md-offset-8 col-xs-offset-1">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            PROCEED TO CHECKOUT
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- CART SECTION ENDS HERE -->
