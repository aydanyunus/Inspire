
@{
    ViewBag.Title = "Buttons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN SECTION STARTS HERE -->
<section id="main">
    <div class="row">
        <div class="col-md-12 col-xs-12 buttons-main-image text-center" style="background: url(../../Uploads/breadcrumbs-typography.jpg);background-position: center 50%;background-size: cover;">
            <h1>
                Buttons
            </h1>
            <a href=@Url.Action("Index", "Home")>
                Home
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <a href=@Url.Action("Index", "Home")>
                Additional Pages
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span>
                Buttons
            </span>
        </div>
    </div>
</section>
<!-- MAIN SECTION ENDS HERE -->
<!-- BUTTONS CONTENT SECTION STARTS HERE -->
<section id="buttons-content">
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-4 text-center">
            <h2>Buttons</h2>
            <p>Easily insert buttons and call-to-actions in any page, use amazing custom options to spice up your pages.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-4 text-center">
            <h3>Button Sizes</h3>
            <p>4 different sizes: super, large, default, and small.</p>
        </div>
    </div>
    <div class="row buttons">
        <div class="container">
            <div class="col-md-3 col-xs-12">
                <button class="btn btn-default btn-xl">
                    SUPER SIZE
                </button>
            </div>
            <div class="col-md-3 col-xs-12">
                <button class="btn btn-default btn-lg">
                    LARGE SIZE
                </button>
            </div>
            <div class="col-md-3 col-xs-12">
                <button class="btn btn-default btn-dflt">
                    DEFAULT SIZE
                </button>
            </div>
            <div class="col-md-3 col-xs-12 text-center">
                <button class="btn btn-default btn-sm">
                    SMALL SIZE
                </button>
            </div>
        </div>
    </div>
</section>
<hr>
<!-- BUTTONS CONTENT SECTION ENDS HERE -->
<!-- SHAPES STARTS HERE-->
<section id="button-shapes">
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-4 text-center">
            <h3>Button Shapes</h3>
            <p>4 different shapes: default, round, square and circle.</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-xs-12 col-md-offset-1">
                <div class="col-md-3 col-xs-12 text-center">
                    <button class="btn btn-default dflt">DEFAULT</button>
                </div>
                <div class="col-md-3 col-xs-12 text-center">
                    <button class="btn btn-default round">ROUND</button>
                </div>
                <div class="col-md-3 col-xs-12 text-center">
                    <button class="btn btn-default square">SQUARE</button>
                </div>
                <div class="col-md-3 col-xs-12 text-center">
                    <button class="btn btn-default circle">CIRCLE</button>
                </div>
            </div>

        </div>
    </div>
</section>
<hr>
<!-- SHAPES ENDS HERE -->
<!-- BUTTON WITH ICONS STARTS HERE -->
<section id="buttons-with-icons">
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-4 text-center">
            <h3>Buttons with Icons</h3>
            <p>Buttons are fully integrated with 900+ icons.</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-xs-12 text-center">
                <button class="btn btn-default">
                    ICON RIGHT
                    <i class="fa fa-user-o" aria-hidden="true"></i>
                </button>
            </div>
            <div class="col-md-3 col-xs-12 text-center">
                <button class="btn btn-default padding-btm">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                    ICON LEFT

                </button>
            </div>
            <div class="col-md-3 col-xs-12 text-center">
                <button class="btn btn-default i-right">
                    ICON RIGHT
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                </button>
            </div>
            <div class="col-md-3 col-xs-12 text-center">
                <button class="btn btn-default i-left">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                    ICON LEFT
                </button>
            </div>

        </div>
    </div>
</section>
<hr>
<!-- BUTTON WITH ICONS ENDS HERE -->
<!-- BUTTON WITH SHADOW STARTS HERE -->
<section id="buttons-with-shadow">
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-4 text-center">
            <h3>Buttons with Shadow</h3>
            <p>Enhance your buttons with a shadow effect.</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-xs-12 col-md-offset-4 col-xs-offset-3">
                <div class="col-md-6 col-xs-12">
                    <button class="btn btn-default with-bg">SHADOW</button>
                </div>
                <div class="col-md-6 col-xs-12">
                    <button class="btn btn-default">SHADOW</button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- BUTTON WITH SHADOW ENDS HERE -->
