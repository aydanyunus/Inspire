@using FinalProject.ViewModels.HomeViewModel;
@model HomeViewModel
@{
ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN SECTION STARTS HERE -->
<section id="main">
    <div class="row">
        <div class="col-md-12 col-xs-12 careers-main-image text-center" style="background: url(../../Uploads/@Model.careersBg.Img); background-position: center 50%; background-size: cover;">
            <h1>
                Careers
            </h1>
            <a href="index.html">
                Home
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <a href="index.html">
                Additional Pages
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span>
                Careers
            </span>
        </div>
    </div>
</section>
<!-- MAIN SECTION ENDS HERE -->
<!-- CAREER SECTION STARTS HERE -->
<section id="career">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-xs-12 career-team">
                <div class="row bordered">
                    <div class="col-md-6 col-xs-12 img-part">
                        <img src="~/Uploads/@Model.career.Img" alt="">
                    </div>
                    <div class="col-md-6 col-xs-12 text-part">
                        <h3>Your career starts here!</h3>
                        <p>
                            @Model.career.Content
                        </p>
                        @foreach (var item in Model.vacancies)
                        {
                             <div class="left-list col-md-6 col-xs-12">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span>@item.Name</span>
                        </div>
                        }
                    </div>
                </div>
                <div class="row positions">
                    <h1>Available Positions</h1>
                    <p>
                        Can't find the job you want? Send your resume to
                        <a href="#">@Model.footer.Adress</a>, and we'll contact you.
                    </p>
                    <div class="col-md-12 col-xs-12 wrapper-bg-white">
                        @foreach (var item in Model.positions)
                        {
                        <div class="col-md-6 col-xs-12 bg-white">
                            <a href="#">@item.Name</a>
                            <div class="group-icons">
                                <i class="fa fa-map-marker" aria-hidden="true">
                                    <span>@item.Location</span>
                                </i>
                                <i class="fa fa-clock-o" aria-hidden="true">
                                    <span>@item.Work_time</span>
                                </i>
                                <i class="fa fa-clock-o" aria-hidden="true">
                                    <span>@item.Time</span>
                                </i>
                            </div>
                        </div>

                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-xs-12 sidebar">
                <div class="row">
                    <div class="col-md-12 col-xs-12 wrapper-work-sidebar">
                        <div class="work-img" style="background-image: url(../../Uploads/@Model.lookingForWork.Img);background-size: cover;">
                            <div class="work-text text-center">
                                <h3>Looking for work?</h3>
                                <div class="border-bottom-green"></div>
                                <p>@Model.lookingForWork.Content</p>
                                <div class="col-md-12 form-group">
                                    <form action="" class="form-" method="POST">
                                        <input type="email" class="form-control" placeholder="Email">
                                        <button class="btn btn-default form-control" type="submit">SUBSCRIBE</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row popular-posts-p">
                    <p>LATEST POSTS</p>
                </div>
                @foreach (var item in Model.sidebar)
                {
                <div class="row popular-posts">
                    <div class="col-md-12 col-xs-12">
                        <a href="single-post.html">
                            <img src="~/Uploads/@item.Img" alt="">
                        </a>
                        <a href="single-post.html" class="text-color">
                           @item.Title
                        </a>
                        <div class="icon-date">
                            <p>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span>
                                    @item.Written_date
                                </span>
                            </p>
                            <p class="margin-left text-right">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>@item.View_Count</span>
                            </p>
                        </div>
                    </div>
                </div>

                }
            </div>
        </div>
    </div>
</section>
<!-- CAREER SECTION ENDS HERE -->