@using FinalProject.ViewModels.HomeViewModel;
@model HomeViewModel

@{
ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- MAIN SECTION STARTS HERE -->
<section id="main">
    <div class="row">
       
        <div class="col-md-12 col-xs-12 competitions-main-image text-center" style="  background: url(../../Uploads/@Model.competitionsBg.Img); bacground-size: cover; background-position: center 50%;">
            <h1>
                Competitions
            </h1>
            <a href=@Url.Action("Index", "Home")>
                Home
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <a href=@Url.Action("Index", "Home")>
                Additional Pages
            </a>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span>
                Competitions
            </span>
        </div>
    </div>
</section>
<!-- MAIN SECTION ENDS HERE -->
<!-- COMPETITIONS STARTS HERE -->
<section id="competitions">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-xs-12 blog-posts">
                @foreach (var item in Model.posts.Where(p => p.Page_Competitions_id == 9).OrderBy(t => t.Id).Take(3).ToList())
                {
                     <div class="row">
                    <div class="col-md-6 col-xs-12 leftside">
                        <a href=@Url.Action("Index", "SinglePost")>
                            <img src="~/Uploads/@item.CompetitionsImg.Img" alt="">
                        </a>
                    </div>
                    <div class="col-md-6 col-xs-12 rightside">
                        <a href=@Url.Action("Index", "SinglePost")>
                            @item.Title
                        </a>
                        <div class="icon-date">
                            <p>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span>@item.Written_date</span>
                            </p>
                            <p class="margin-left">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>@item.View_Count</span>
                            </p>
                        </div>
                        <p class="content">
                           @item.Content
                        </p>
                        <a href=@Url.Action("Index", "SinglePost") class="btn read-more-btn btn-default">READ MORE</a>
                    </div>
                </div>
                }               
               
                <nav aria-label="Page navigation" class="col-md-12 col-xs-12 text-center">
                    <ul class="pagination">
                        <li>
                            <a href="#" class="active">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <span>...</span>
                        </li>
                        <li>
                            <a href="#">12</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-md-3 col-xs-12 sidebar">
                <div class="row bordered-sidebar">
                    <div class="col-md-12 col-xs-12">
                        <p class="free-offer">FREE OFFER</p>
                        <h4>@Model.freeOffer.SupTitle</h4>
                        <h5>@Model.freeOffer.Title</h5>
                        <form action="" method="POST">
                            <div class="col-md-12 col-xs-12 form-group">
                                <input type="email" class="form-control" placeholder="Email">
                                <button type="submit" class="btn-lg gray-btn">SUBSCRIBE</button>
                            </div>
                        </form>
                        <h5>@Model.freeOffer.SubTitle</h5>
                    </div>
                </div>
                <div class="row popular-posts-p">
                    <p>POPULAR POSTS</p>
                </div>
                @foreach (var item in Model.sidebar)
                {
                <div class="row popular-posts">
                    <div class="col-md-12 col-xs-12">
                        <a href=@Url.Action("Index", "SinglePost")>
                            <img src="~/Uploads/@item.Img" alt="">
                        </a>
                        <a href=@Url.Action("Index", "SinglePost") class="text-color">
                           @item.Title
                        </a>
                        <div class="icon-date">
                            <p>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span>
                                    @item.Written_date
                                </span>
                            </p>
                            <p class="margin-left text-right">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>@item.View_Count</span>
                            </p>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- COMPETITIONS ENDS HERE -->