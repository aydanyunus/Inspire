@model IEnumerable<FinalProject.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Background_img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Written_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.View_Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SliderCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SliderCategory1.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
          <img src="~/Uploads/@item.Background_img" class="img-thumbnail"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Written_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.View_Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SliderCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SliderCategory1.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
